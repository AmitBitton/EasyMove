<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginBottom="12dp"
    app:cardBackgroundColor="@color/card_background"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    android:layoutDirection="rtl">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgNotifIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_notification"
                android:background="@drawable/circle_bg_gray" 
                android:padding="8dp"
                app:tint="@color/purple_500"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginRight="12dp">

                <TextView
                    android:id="@+id/tvNotifTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="בקשת צ'אט חדשה"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@color/text_primary"/>

                <TextView
                    android:id="@+id/tvNotifBody"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="הלקוח אלדין מעוניין לפתוח בצ'אט לגבי הובלה."
                    android:textSize="14sp"
                    android:textColor="@color/text_primary"
                    android:alpha="0.7"
                    android:layout_marginTop="4dp"/>

                <TextView
                    android:id="@+id/tvNotifTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="לפני 2 דק'"
                    android:textSize="12sp"
                    android:textColor="#9E9E9E"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>

            <View
                android:id="@+id/viewUnreadDot"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:background="@drawable/circle_bg_red"
                android:layout_gravity="top"
                android:visibility="visible"/>
        </LinearLayout>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>