<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:strokeColor="#E0E0E0"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/ivItemImage"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:scaleType="centerCrop"
                android:background="#F5F5F5"
                android:src="@android:drawable/ic_menu_gallery"
                app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Medium" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="8dp">

                <TextView
                    android:id="@+id/tvItemName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="שם הפריט"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/tvItemRoom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="חדר: סלון"
                    android:textSize="14sp"
                    android:textColor="#757575" />

                <TextView
                    android:id="@+id/tvItemDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="נוסף ב: 01/01/2025"
                    android:textSize="12sp"
                    android:textColor="#9E9E9E"
                    android:layout_marginTop="2dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp">

                    <TextView
                        android:id="@+id/tvItemQuantity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="x1"
                        android:background="@drawable/bg_badge_quantity"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:textSize="12sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/tvItemFragile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="שביר ⚠️"
                        android:textColor="#D32F2F"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:layout_marginStart="8dp"
                        android:visibility="gone"/>
                </LinearLayout>
            </LinearLayout>

            <ImageButton
                android:id="@+id/btnDeleteItem"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@android:drawable/ic_menu_delete"
                app:tint="#B0BEC5" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#EEEEEE"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnItemDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="הצג פירוט מלא"
            android:textSize="12sp"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:minHeight="0dp"/>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>