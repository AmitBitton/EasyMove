<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:layoutDirection="rtl">

    <TextView
        android:id="@+id/textNoMove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="אין הובלה פעילה כרגע"
        android:textSize="22sp"
        android:textColor="@android:color/darker_gray"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardMoveDetails"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        android:visibility="visible"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="פרטי הובלה"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:layout_marginBottom="24dp"/>

                <TextView
                    android:text="מוצא:"
                    android:textSize="14sp"
                    android:textColor="#757575"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/textFrom"
                    android:text="טרם נבחרה כתובת"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:text="יעד:"
                    android:textSize="14sp"
                    android:textColor="#757575"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/textTo"
                    android:text="טרם נבחרה כתובת"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:text="תאריך:"
                    android:textSize="14sp"
                    android:textColor="#757575"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/textDate"
                    android:text="טרם נקבע תאריך"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="32dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnChatWithMover"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="צ'אט עם המוביל"
                    android:textSize="16sp"
                    android:backgroundTint="#009688"
                    app:icon="@android:drawable/stat_notify_chat"
                    app:iconGravity="textStart"
                    android:visibility="gone"
                    android:layout_marginBottom="12dp"/>

                <Button
                    android:id="@+id/btnViewItems"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="צפה ברשומות"
                    android:textSize="16sp"
                    android:backgroundTint="#2196F3"
                    android:layout_marginBottom="12dp"/>

                <Button
                    android:id="@+id/btnAddPartner"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="הוסף שותף להובלה"
                    android:textSize="16sp"
                    android:backgroundTint="#4CAF50"
                    android:layout_marginBottom="12dp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCancelMove"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="ביטול"
                    android:textSize="16sp"
                    android:textColor="@android:color/white"
                    android:backgroundTint="#D32F2F"
                    app:icon="@android:drawable/ic_delete"
                    app:iconGravity="textStart"/>

            </LinearLayout>
        </ScrollView>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>