<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:layoutDirection="rtl">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/textTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="התחברות"
            android:textSize="26sp"
            android:textStyle="bold"
            android:layout_marginBottom="24dp" />

        <EditText
            android:id="@+id/editEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="אימייל"
            android:inputType="textEmailAddress"
            android:layout_marginBottom="12dp" />

        <EditText
            android:id="@+id/editPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="סיסמה"
            android:inputType="textPassword"
            android:layout_marginBottom="16dp" />

        <!-- השדות האלו יופיעו רק במצב הרשמה -->
        <EditText
            android:id="@+id/editName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="שם מלא"
            android:layout_marginBottom="12dp"
            android:visibility="gone" />

        <EditText
            android:id="@+id/editPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="טלפון"
            android:inputType="phone"
            android:layout_marginBottom="12dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/textUserTypeLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="בחרי סוג משתמש:"
            android:layout_marginBottom="4dp"
            android:visibility="gone" />

        <RadioGroup
            android:id="@+id/radio_user_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp"
            android:visibility="gone">

            <RadioButton
                android:id="@+id/radio_customer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="לקוח"
                android:checked="true" />

            <RadioButton
                android:id="@+id/radio_mover"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="מוביל" />
        </RadioGroup>

        <Button
            android:id="@+id/buttonAction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="התחבר"
            android:layout_marginBottom="12dp" />

        <TextView
            android:id="@+id/switchModeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="אין לך חשבון? להרשמה לחצי כאן"
            android:textSize="14sp" />

    </LinearLayout>
</ScrollView>
