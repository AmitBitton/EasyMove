<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5"
    android:padding="16dp"
    android:layoutDirection="rtl">

    <TextView
        android:text="爪 "
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:text="驻?"
                android:textStyle="bold"
                android:layout_marginBottom="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/btnSourceAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/tvSourceResult"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="抓 专转 转转 爪"
                android:padding="12dp"
                android:background="#E0E0E0"
                android:textSize="14sp"
                android:textColor="#000000"
                android:layout_marginBottom="12dp"/>

            <TextView
                android:text="?"
                android:textStyle="bold"
                android:layout_marginBottom="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/btnDestAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/tvDestResult"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="抓 专转 转转 注"
                android:padding="12dp"
                android:background="#E0E0E0"
                android:textSize="14sp"
                android:textColor="#000000"
                android:layout_marginBottom="12dp"/>

            <TextView
                android:text="转?"
                android:textStyle="bold"
                android:layout_marginBottom="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/btnSelectDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" 专 转专 "
                android:backgroundTint="#FF9800"
                android:textColor="@color/white"
                android:layout_marginBottom="16dp"/>

            <Button
                android:id="@+id/btnSearchAction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" 驻砖  转"
                android:backgroundTint="#4CAF50"
                android:padding="12dp"
                android:textSize="16sp"
                android:enabled="false"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerMovers"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>