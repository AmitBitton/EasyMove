<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/profile_scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:padding="16dp"
    android:paddingBottom="140dp"
    android:clipToPadding="false"
    android:layoutDirection="rtl">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/profile_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="האזור האישי שלי"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <ImageView
            android:id="@+id/image_profile"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/ic_launcher_round"
            android:scaleType="centerCrop"
            android:background="@android:color/darker_gray"
            android:contentDescription="תמונת פרופיל"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/button_change_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="שינוי תמונה"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="שם מלא" />

        <EditText
            android:id="@+id/edit_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="הקלידי את שמך"
            android:inputType="textPersonName"
            android:enabled="false"
            android:layout_marginBottom="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="טלפון" />

        <EditText
            android:id="@+id/edit_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="מספר טלפון"
            android:inputType="phone"
            android:enabled="false"
            android:layout_marginBottom="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="סוג משתמש" />

        <TextView
            android:id="@+id/text_user_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="customer / mover"
            android:padding="8dp"
            android:background="#EEEEEE"
            android:layout_marginBottom="12dp" />

        <TextView
            android:id="@+id/label_from_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="כתובת מוצא (ברירת מחדל ללקוח)" />

        <TextView
            android:id="@+id/tv_from_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="לא נבחרה כתובת"
            android:padding="10dp"
            android:background="#EEEEEE"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btnPickFromAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="בחר כתובת מוצא"
            android:visibility="gone"
            android:layout_marginBottom="12dp" />

        <TextView
            android:id="@+id/label_to_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="כתובת יעד (ברירת מחדל ללקוח)" />

        <TextView
            android:id="@+id/tv_to_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="לא נבחרה כתובת"
            android:padding="10dp"
            android:background="#EEEEEE"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btnPickToAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="בחר כתובת יעד"
            android:visibility="gone"
            android:layout_marginBottom="12dp" />

        <!-- לקוח בלבד: קומה + דירה (אופציונלי) -->
        <TextView
            android:id="@+id/label_floor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="קומה (אופציונלי)"
            android:visibility="gone" />

        <EditText
            android:id="@+id/edit_floor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="לדוגמה: 3"
            android:inputType="number"
            android:enabled="false"
            android:visibility="gone"
            android:layout_marginBottom="12dp" />

        <TextView
            android:id="@+id/label_apartment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="מספר דירה (אופציונלי)"
            android:visibility="gone" />

        <EditText
            android:id="@+id/edit_apartment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="לדוגמה: 12"
            android:inputType="number"
            android:enabled="false"
            android:visibility="gone"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/label_about"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="אודות" />

        <EditText
            android:id="@+id/edit_about"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="ספרי על עצמך או על שירותי ההובלה שלך"
            android:inputType="textMultiLine"
            android:minLines="3"
            android:gravity="top"
            android:enabled="false"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/label_mover_base_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="כתובת בסיס יציאה:"
            android:visibility="gone"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/tvMoverBaseAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="טרם הוגדר בסיס יציאה"
            android:padding="10dp"
            android:background="#EEEEEE"
            android:visibility="gone"
            android:layout_marginBottom="12dp" />

        <LinearLayout
            android:id="@+id/layoutMoverFields"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_marginBottom="16dp"
            android:background="#F0F4C3"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="הגדרת בסיס יציאה (למובילים)"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginBottom="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="כתובת בסיס נבחרת:" />

            <TextView
                android:id="@+id/tvSelectedMoverAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="לא נבחרה כתובת"
                android:padding="8dp"
                android:background="#FFFFFF"
                android:layout_marginBottom="8dp" />

            <Button
                android:id="@+id/btnPickMoverLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="שנה מיקום בסיס"
                android:backgroundTint="#4CAF50"
                android:layout_marginBottom="16dp" />

            <TextView
                android:id="@+id/tvRadiusLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="רדיוס שירות: 30 ק״מ"
                android:textStyle="bold"
                android:layout_marginBottom="4dp" />

            <com.google.android.material.slider.Slider
                android:id="@+id/sliderRadius"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:valueFrom="10"
                android:valueTo="200"
                android:stepSize="10"
                android:value="30" />
        </LinearLayout>

        <Button
            android:id="@+id/button_edit_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="עריכת פרופיל"
            android:layout_marginBottom="12dp" />

        <LinearLayout
            android:id="@+id/layout_save_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            android:layout_marginBottom="12dp">

            <Button
                android:id="@+id/button_save_profile"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="שמור" />

            <Button
                android:id="@+id/button_cancel_edit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ביטול" />
        </LinearLayout>

        <TextView
            android:id="@+id/text_error"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FF0000"
            android:visibility="gone"
            android:layout_marginBottom="8dp" />

        <ProgressBar
            android:id="@+id/progress_loading"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:visibility="gone" />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
