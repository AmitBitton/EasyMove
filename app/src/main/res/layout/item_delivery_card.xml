<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="הובלה מתואמת ✅"
                android:textColor="#4CAF50"
                android:textStyle="bold"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/tvMoveStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ממתין לתאריך"
                android:background="#FFF3E0"
                android:textColor="#FF9800"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:textSize="12sp"
                android:textStyle="bold"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0"
            android:layout_marginVertical="8dp"/>

        <TextView
            android:id="@+id/tvCustomerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="שם הלקוח: טוען..."
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/tvSourceAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="מ: כתובת מוצא"
                android:textSize="14sp"
                android:textColor="#757575"/>

            <TextView
                android:id="@+id/tvDestAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ל: כתובת יעד"
                android:textSize="14sp"
                android:textColor="#757575"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:gravity="end">

            <Button
                android:id="@+id/btnDetails"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="פרטים"
                android:layout_marginEnd="8dp"/>

            <Button
                android:id="@+id/btnOpenChat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="פתח צ'אט"
                android:backgroundTint="#2196F3"/>
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>