<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/profile_scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:padding="16dp"
    android:layoutDirection="rtl">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/profile_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="האזור האישי שלי"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <ImageView
            android:id="@+id/image_profile"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/ic_launcher_round"
            android:scaleType="centerCrop"
            android:background="@android:color/darker_gray"
            android:contentDescription="תמונת פרופיל"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/button_change_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="שינוי תמונה"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="שם מלא" />

        <EditText
            android:id="@+id/edit_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="הקלידי את שמך"
            android:inputType="textPersonName"
            android:layout_marginBottom="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="טלפון" />

        <EditText
            android:id="@+id/edit_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="מספר טלפון"
            android:inputType="phone"
            android:layout_marginBottom="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="סוג משתמש" />

        <TextView
            android:id="@+id/text_user_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="customer / mover"
            android:padding="8dp"
            android:background="#EEEEEE"
            android:layout_marginBottom="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="כתובת מוצא (ברירת מחדל)" />

        <EditText
            android:id="@+id/edit_from_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="לדוגמה: רחוב הרצל 10, תל אביב"
            android:inputType="textPostalAddress"
            android:layout_marginBottom="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="כתובת יעד (ברירת מחדל)" />

        <EditText
            android:id="@+id/edit_to_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="לדוגמה: רחוב ביאליק 5, רמת גן"
            android:inputType="textPostalAddress"
            android:layout_marginBottom="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="אודות" />

        <EditText
            android:id="@+id/edit_about"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="ספרי על עצמך או על שירותי ההובלה שלך"
            android:inputType="textMultiLine"
            android:minLines="3"
            android:gravity="top"
            android:layout_marginBottom="16dp" />

        <LinearLayout
            android:id="@+id/layoutMoverFields"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_marginBottom="16dp"
            android:background="#F9F9F9"
            android:padding="12dp">

            <TextView
                android:text="אזורי שירות (חובה למוביל)"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginBottom="8dp"/>

            <Button
                android:id="@+id/btnSelectAreas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="בחר אזורי פעילות"
                android:backgroundTint="#FF9800"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/textSelectedAreas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="לא נבחרו אזורים"
                android:textColor="#757575"
                android:gravity="center"
                android:layout_marginBottom="4dp"/>
        </LinearLayout>
        <Button
            android:id="@+id/button_save_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="שמירת פרופיל"
            android:layout_marginBottom="12dp" />

        <TextView
            android:id="@+id/text_error"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FF0000"
            android:visibility="gone"
            android:layout_marginBottom="8dp" />

        <ProgressBar
            android:id="@+id/progress_loading"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:visibility="gone" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>